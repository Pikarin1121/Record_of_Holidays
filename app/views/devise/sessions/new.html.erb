<div class="container">
  <h2>ログイン</h2>

  <%= form_with model: @user, url: user_session_path do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="well">
      <form class="form-horizontal">
        <fieldest>

          <div class="form-group">
            <label for="email" class="col col-xs-12 col-sm-4 col-md-3 control-label">メールアドレス</label>
            <div class="col col-xs-12 col-sm-6 col-md-7">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレスを入力してください" %>
            </div>
            <div class="col-xs-offset-2 col-sm-offset-2 col-md-offset-3"></div>
          </div>

          <div class="form-group">
            <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">パスワード</label>
            <div class="col col-xs-5 col-sm-3 col-md-3">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "パスワード" %>
            </div>
            <div class="col-xs-offset-2 col-sm-offset-2 col-md-offset-3"></div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <div class="col-xs-offset-2 col-sm-offset-2 col-md-offset-3"></div>

          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-success" %>
          </div>

        </fieldest>
      </form>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
