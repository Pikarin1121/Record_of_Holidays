<div class="container">
  <h4>新規登録</h4>

  <%= form_with model: @user, url: user_registration_path do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

  <div class="well">
    <form class="form-horizontal">
      <fieldset>

        <div class="form-group">
          <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">ユーザー名</label>
          <div class="col col-xs-5 col-sm-3 col-md-3">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "ユーザー名" %>
          </div>
          <div class="col-xs-offset-2 col-sm-offset-2 col-md-offset-3"></div>
        </div>

        <div class="form-group">
          <label for="email" class="col col-xs-12 col-sm-4 col-md-3 control-label">メールアドレス</label>
          <div class="col col-xs-12 col-sm-6 col-md-7">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレスを入力してください" %>
          </div>
          <div class="col-xs-offset-2 col-sm-offset-2 col-md-offset-3"></div>
        </div>

        <div class="birthday_field">
          <label for="birthday" class="col col-xs-12 col-sm-4 col-md-3 control-label">生年月日</label>
          <div class="col col-xs-5 col-sm-3 col-md-3">
            <%= raw sprintf(
              f.date_select(
              :birthday,
              use_month_numbers: true,
              start_year: 1970,
              end_year: (Time.now.year - 18),
              default: Date.new(1990, 1, 1),
              date_separator: '%s'),
              '年 ' , '月 ') + '日' %>
          </div>
          <div class="col-xs-offset-2 col-sm-offset-2 col-md-offset-3"></div>
        </div>

        <div class="form-group">
          <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">パスワード</label>
          <div class="col col-xs-5 col-sm-3 col-md-3">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード" %>
          </div>
          <div class="col col-xs-5 col-sm-3 col-md-3">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワード確認用" %>
          </div>
          <div class="col-xs-offset-2 col-sm-offset-2 col-md-offset-3"></div>
        </div>

        <div class="actions">
          <%= f.submit "新規登録する", class: "btn btn-primary" %>
        </div>

      </fieldset>
    </form>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>