<% if holiday.favorited_by?(current_user) %>
 <%= link_to holiday_favorites_path(holiday), method: :delete, remote: true do %>
   <i class="fas fa-heart" style="color:red"></i><%= holiday.favorites.count %>
 <% end %>
<% else %>
 <%= link_to holiday_favorites_path(holiday), method: :post, remote: true do %>
   <i class="far fa-heart" style="color:red"></i><%= holiday.favorites.count %>
 <% end %>
<% end %>